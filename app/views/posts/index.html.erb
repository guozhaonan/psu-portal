<% if admin_signed_in? %>
<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Tagline</th>
      <th>Url</th>
      <th>Description</th>
      <th>Embedded Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.tagline %></td>
        <td><%= post.url %></td>
        <td><%= post.description %></td>
        <td><%= post.embed_field %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
<% elsif user_signed_in? || investor_signed_in? %>
<h1>Investor/User View</h1>
<% else %>
<h1>Not Signed In</h1>
<% end %>
